{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "allowJs": true,

        "baseUrl": ".",
        "paths": {
            // "@components/*": ["src/components/*"],
            // "@UI/*": ["src/components/UI/*"],
            "@views/*": ["src/views/*"],
            // "@stores/*": ["src/stores/*"],
            // "@doc-types/*": ["src/types/*"],
            "@assets/*": ["src/assets/*"],
            "@helpers/*": ["src/helpers/*"],
            // "@img/*": ["src/assets/img/*"],
            // "@helpers/*": ["src/helpers/*"],
            "@layouts/*": ["src/layouts/*"],
            // "@router/*": ["src/router/*"],
            "@/*": ["src/*"]
        }
    }
}
